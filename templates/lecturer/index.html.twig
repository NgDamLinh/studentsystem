{% extends 'base.html.twig' %}

{% block title %}Lecturer index{% endblock %}

{% block body %}
    <h1>Lecturer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LecID</th>
                <th>LecName</th>
                <th>DOB</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecturer in lecturers %}
            <tr>
                <td>{{ lecturer.id }}</td>
                <td>{{ lecturer.lecID }}</td>
                <td>{{ lecturer.lecName }}</td>
                <td>{{ lecturer.DOB ? lecturer.DOB|date('Y-m-d') : '' }}</td>
                <td>{{ lecturer.Image }}</td>
                <td>
                    <a href="{{ path('app_lecturer_show', {'id': lecturer.id}) }}">show</a>
                    <a href="{{ path('app_lecturer_edit', {'id': lecturer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lecturer_new') }}">Create new</a>
{% endblock %}
