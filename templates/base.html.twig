<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Student Management System
			{% endblock %}
		</title>
		{% block stylesheets %}
			<!-- CSS only -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<div
				class="container col-10 mt-3">
					<ul class="nav justify-content-center bg-warning">
						<li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('home')}}">Home</a>
						</li>
						<li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('app_student_index')}}">Student</a>
						</li>
						<li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('author_index')}}">Event</a>
						</li>
						<li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('genre_index')}}">Course</a>
						</li>
                        <li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('app_lecturer_index')}}">Teachers</a>
						</li>
                        <li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('genre_index')}}">About Us</a>
						</li>
						<li class="nav-item h1">
							<a class="nav-link text-danger" href="{{ path('app_logout')}}">Logout
								<u>
									<i>
										{% if app.user != null %}
											({{ app.user.username }})
										{% endif %}
									</i>
								</u>
							</a>
						</li>
					</ul>
			{# bs5-modal-default #}

			<!-- Modal -->
			<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">About</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<div class="container text-center">
								<h6 class="text text-success">Copyright by Kaito Kid</h6>
								<img src="https://i.pinimg.com/originals/41/d2/c6/41d2c6d3be82c4238939e6d9f1d512c5.jpg" width="250" height="200">
								<br>
							</div>
						</div>
					</div>
				</div>
			</div>

		{% endblock %}
		{% block flash %}
			<div class="container col-md-6 text-center mt-3">
				{% for flash in app.session.flashBag.get('Info') %}
					<p class="alert alert-info">{{ flash }}</p>
				{% endfor %}
				{% for flash in app.session.flashBag.get('Warning') %}
					<p class="alert alert-danger">{{ flash }}</p>
				{% endfor %}
			</div>
		{% endblock %}
		{% block body %}{% endblock %}

		{% block footer %}
			<div class="container col-10 mt-3 text-center">
				<p class="alert alert-success h5">Student Management System-2022</p>
			</div>
		{% endblock %}
	</body>
</html>

